<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-9">
    <div class="panel panel-primary">
      <div class="panel-heading">
        Songs
      </div>
      <div class="panel-body">

        <% @songs.each do |song| %>
        <div class="row">
          <div class="col-md-7">
            <h4><%= song.name %></h4>
          </div>
          <div class="col-md-3 right">
            <%= link_to "View", song, class: "btn btn-default" %>
            <%= link_to "Update", edit_song_path(song), class: "btn btn-default" %>
          </div>
        </div>
        <% end %>

      </div>
    </div>

    <%= link_to "Add new song", new_song_path, class: "btn btn-primary" %>
  </div>
</div>
