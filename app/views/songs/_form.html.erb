<%= form_for [artist, album , song], remote: true do |f| %>
  <ul id="errors"></ul>
  <div class="form-group">
    <label>Song Title</label>
    <%= f.text_field :name, placeholder: "Song Title", class: "form-control", id: "song-title", data: { album_id: album.id, artist_id: artist.id } %>
  </div>

  <div class="form-group">
    <label>Year Released</label>
    <%= f.number_field :year_released, placeholder: "Year Released", class: "form-control", id: "song-year" %>
  </div>

  <div class="form-group">
    <label>URL (please fill in a valid Soundcloud url)</label>
    <%= f.text_field :url, placeholder: "Song URL", class: "form-control", id: "song-url" %>
  </div>

  <label>Genres</label>
name
  <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :name) do |b| %>
  <div class="form-group">
    <%= b.check_box(class: "check_box") %> <%= b.object.name %>
  </div>
<% end %>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
