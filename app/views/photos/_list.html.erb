<% if @artist.photos %>
  <div class="row">
    <% @artist.photos.each do |photo| %>
      <div class="col-md-4">
        <%= image_tag photo.image.thumbnail, class: "thumbnail" %>
        <%= link_to "", photo, class: "glyphicon glyphicon-trash", method: :delete, remote: true, data: { confirm: "Are you sure?" } %>
      </div>
    <% end %>
  </div>
<% end %>
