<div class="panel panel-primary">
  <div class="panel-heading"><%= @album.name %></div>

  <div class="panel-body">

    <p>Songs:</p>
    <% @album.songs.each do |song| %>
      <div class="row">
        <div class="col-md-10">
          <p>Title: <%= song.name %>
          <p>Genre(s):
            <% song.genres.each do |genre| %>
            <span class="label label-success"><%= genre.name %></span>
            <% end %>
          </p>
        </div>
        <div class="col-md-2">
          <% if current_user.has_profile? %>
            <%= link_to "", new_artist_album_song_favourite_path(@artist, @album, song), class: "glyphicon glyphicon-ok-circle" %>
          <% end %>
          <%= link_to "", edit_artist_album_song_path(@artist, @album, song), class: "glyphicon glyphicon-pencil" %>
          <%= link_to "", artist_album_song_path(@artist, @album, song), method: :delete, remote: true, data: { confirm: "Are you sure?" }, class: "glyphicon glyphicon-remove", id="song-<%= song.id %>" %>
        </div>
      </div>
      <iframe width="100%" height="166" scrolling="no" frameborder="no" src= <%= song.url%> ></iframe>
    <% end %>
  </div>
</div>

<%= link_to "Back to Albums", artist_path(@artist), class: "btn btn-default" %>
<%= link_to "Add Song to Album", new_artist_album_song_path(@artist, @album), class: "btn btn-default" %>
