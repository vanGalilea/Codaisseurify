<div class="panel panel-primary">
  <div class="panel-heading"><%= @album.name %></div>

  <div class="panel-body">

    <p>Songs:</p>
    <% @album.songs.each do |song| %>
      <%= song.name %>
      <%= song.year_released %>
      <iframe width="100%" height="166" scrolling="no" frameborder="no" src= <%= song.url%> ></iframe>
    <% end %>
  </div>
</div>

<%= link_to "Back to Albums", artist_path(@artist), class: "btn btn-default" %>
