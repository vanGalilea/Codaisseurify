<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-9">
    <div class="panel panel-primary">
      <div class="panel-heading">
        Artists
      </div>
      <div class="panel-body">

        <% @artists.each do |artist| %>
        <div class="row">
          <div class="col-md-7">
            <h4><%= artist.name %></h4>
          </div>
          <div class="col-md-3">
            <%= link_to "", artist, class: "glyphicon glyphicon-music" %>
            <%= link_to "", edit_artist_path(artist), class: "glyphicon glyphicon-pencil" %>
            <%= link_to "", artist, method: :delete, data: { confirm: "Are you sure?" }, class: "glyphicon glyphicon-remove" %>
          </div>
        </div>
        <% end %>

      </div>
    </div>

    <%= link_to "Add new artist", new_artist_path, class: "btn btn-primary" %>
  </div>
</div>
